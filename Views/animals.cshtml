@if (@Model.Count == 0)
{
  <p>No animals have been added yet!</p>
}
else
{
  <h1>Here is your list of animals:</h1>
  <ul>
    @foreach (var animal in Model)
    {
      <li>@animal.GetName(), @animal.GetGender(), @animal.GetBreed(), @animal.GetAdmittanceDate()</li>
    }
  </ul>
  <form action="/animals/delete" method="post">
    <button type="submit">Clear all animals</button>
  </form>
}
<p><a href="/animals/new">Add a new animal</a></p>
<h4><a href="/animals/breed">Sort by breed</a></h4>
<h4><a href="/animals/type_id">Sort by type</a></h4>
<h4><a href="/animals/admittance_date">Sort by admittance date</a></h4>
<p><a href="/">Return home</a></p>
